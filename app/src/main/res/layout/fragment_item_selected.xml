<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_selected">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DEF4FA"
        tools:context=".login2">

        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/mypic4" />

        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="#90FFC7DB"
            android:padding="8dp"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="#70096E"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imgV"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="135dp"
            android:layout_below="@id/TextView"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@id/imgV"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="#90FFC7DB"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="213dp"
                android:layout_marginLeft="30dp"
                android:text="Title"
                android:textColor="#2D0FB1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="10dp"
                android:text="description"
                android:textColor="#2D0FB1"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>